@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" onsubmit="updateUser()">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Şifre ve Bilgi Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Adınız</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Surname">Soyadınız</label>
                                <input type="text" class="form-control" asp-for="Surname" id="Surname">
                            </div>
                            <div class="form-group">
                                <label for="Username">Kullanıcı Adınız</label>
                                <input type="text" class="form-control" asp-for="Username" id="Username">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresiniz</label>
                                <input type="text" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="Password">Şifreniz</label>
                                <input type="password" class="form-control" asp-for="Password" id="Password">
                            </div>
                            <div class="form-group">
                                <label for="ConfirmPassword">Şifreyi Onaylayın</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" id="ConfirmPassword">
                            </div>
                        </div>
                        <div class="card-action" >
                            <button class="btn btn-success">Profili Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function updateUser() {
        var password = document.getElementById('Password').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;

        // Check if passwords match
        if (password === confirmPassword) {
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Şifreniz Güncellendi",
                showConfirmButton: false,
                timer: 1500
            });
        } else {
            // Show an error message if passwords don't match
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "Şifreniz uyuşmuyor!",
                showConfirmButton: false,
                timer: 1500
            });
        }
    }
</script>
