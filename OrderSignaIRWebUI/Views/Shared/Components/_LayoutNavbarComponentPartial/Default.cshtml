	<script type="text/javascript">
		$(document).ready(() => {
			var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7085/SignalRHub").build();
			$("#connstatus").text(connection.state);
			connection.start().then(() => {
				$("#connstatus").text(connection.state);
				setInterval(() => {
					connection.invoke("SendNotification");
				}, 1000);//1 saniyede bir istek at timer gibi
			}).catch((err) => { console.log(err) });

			connection.on("ReceiveNotificationCountByStatusFalse", (value) => {
				$("#notificationcount").text(value);
			});
		});
	</script>
